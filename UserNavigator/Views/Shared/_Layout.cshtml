<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User Navigator</title>
    <script src="~/vendor/vendor.min.js" asp-append-version="true"></script>
    <link href="~/vendor/style.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">
                <img src="~/images/favicon-32x32.png" class="d-inline-block align-top" alt="">
                People Finder
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"></ul>
                @await Component.InvokeAsync(nameof(CurrentUserComponent))
            </div>
        </nav>
        <div class="container pb-4">
            @RenderBody()
        </div>
    </div>
    <footer class="footer" id="footer">
        <nav class="navbar navbar-expand-md navbar-dark  bg-dark">
            <a class="navbar-brand" href="#">
                <i class="fas fa-copyright"></i>
                2019 Commonwealth of Pennsylvania
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                   
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <a href="./swagger" target="_blank" class="btn btn-primary my-2 my-sm-0" type="submit">
                        <i class="fas fa-cloud-download-alt"></i> View API Services
                    </a>
                </form>
            </div>
        </nav>
    </footer>
</body>
</html>
