@model CurrentUser
<p class="nav navbar-text navbar-right">
    <button type="button" class="btn btn-primary faa-parent animated-hover" data-toggle="modal" data-target="#myModal">
        <i class="fas fa-user faa-tada"></i> @Model.NAME_FIRST @Model.NAME_LAST
    </button>
</p>

<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"> <i class="fas fa-user"></i> @Model.NAME_FIRST @Model.NAME_MIDDLE @Model.NAME_LAST</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" readonly value="@Model.EMAIL_ADDRESS" disabled>
                    </div>
                    <div class="form-group">
                        <label for="EmpNo">Emp No</label>
                        <input type="text" class="form-control" id="EmpNo" readonly value="@Model.EMPLOYEE_NUM" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <input type="text" class="form-control" id="Phone" readonly value="@Model.WORK_PHONE" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <input type="text" class="form-control" id="Address" readonly value="@Model.WORK_ADDR" disabled>
                    </div>
                    <div class="form-group">
                        <label for="City">City</label>
                        <input type="text" class="form-control" id="City" readonly value="@Model.WORK_CITY" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Zip">Zip</label>
                        <input type="text" class="form-control" id="Zip" readonly value="@Model.WORK_ZIP" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Bureau">Bureau</label>
                        <input type="text" class="form-control" id="Bureau" readonly value="@Model.BUREAU" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Deputate">Deputate</label>
                        <input type="text" class="form-control" id="Deputate" readonly value="@Model.DEPUTATE" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Deputate">Division</label>
                        <input type="text" class="form-control" id="Deputate" readonly value="@Model.DIVISION" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Company">Company</label>
                        <input type="text" class="form-control" id="Company" readonly value="@Model.COMPANY" disabled>
                    </div>
                    <div class="form-group">
                        <label for="Descrition">Description</label>
                        <input type="text" class="form-control" id="Description" readonly value="@Model.DESCRIPTION" disabled>
                    </div>
                    <div class="form-group">
                        <label for="msExchExtensionAttribute20">ms Exch Extension Attribute 20</label>
                        <input type="text" class="form-control" id="msExchExtensionAttribute20" readonly value="@Model.msExchExtensionAttribute20" disabled>
                    </div>
                    <div class="form-group">
                        <label for="msExchExtensionAttribute21">ms Exch Extension Attribute 21</label>
                        <input type="text" class="form-control" id="msExchExtensionAttribute21" readonly value="@Model.msExchExtensionAttribute21" disabled>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

